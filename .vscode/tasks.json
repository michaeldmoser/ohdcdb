{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Django Make migration",
            "type": "shell",
            "command": "python manage.py makemigrations && python manage.py migrate",
            "options": {
                "cwd": "${workspaceFolder}/ohdccrm"
            },
            "problemMatcher": []
        },
        {
            "label": "Django migrate",
            "type": "shell",
            "command": "python manage.py migrate",
            "options": {
                "cwd": "${workspaceFolder}/ohdccrm"
            },
            "problemMatcher": []
        },
        {
            "label": "Django Integration Tests",
            "type": "shell",
            "command": "python manage.py test testing.integration",
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "problemMatcher": []
        },
        {
            "label": "Npm run dev",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Start App",
            "type": "shell",
            "command": "cd frontend && npm start",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
        {
            "label": "Start Test",
            "type": "shell",
            "command": "cd frontend && npm run test --inspect",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Robot",
            "type": "shell",
            "command": "testing/scripts/run_suite.sh",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
    ]
}